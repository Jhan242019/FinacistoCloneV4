@{
    ViewData["Title"] = "ConfUser";
    var user = (User)Model;
}
<form class="row formulario" action="/auth/confuser" method="post">
    <input type="hidden" name="Id" />
    <input type="hidden" name="Username"/>
    <div class="mb-3">
        <label class="form-label fw-bold">Usuario Conectado: <i class="fas fa-street-view"></i> @user.Username</label>
    </div>
    <div class="mb-3">
        <label class="form-label">Nuevo Password</label>
        <input type="text" class="form-control" name="Password"/>
        <span class="text-danger">@Html.ValidationMessage("Password")</span>
    </div>
