<div class="container-fluid px-4">
    <h2 class="mt-4 fst-italic text-center">Cuentas</h2>
    <div class="justify-content-end">
        <p class="float-end fw-bold fst-italic m-3">Saldo Total: <span class="@(accounts.Sum(o => o.Amount) >= 0 ? " text-success":"text-danger")">S/. @String.Format("{0:N2}",  accounts.Sum(o => o.Amount))</span></p>
    </div>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a href="/account/create" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <i class="fas fa-plus-circle"></i>
                Crear Cuenta
            </a>
        </li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Cuentas
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>Imagen</th>
                        <th>Tipo</th>
                        <th>Nombre</th>
                        <th>Divisa</th>
                        <th>Saldo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Imagen</th>
                        <th>Tipo</th>
                        <th>Nombre</th>
                        <th>Divisa</th>
                        <th>Saldo</th>
                        <th>Acciones</th>
                    </tr>
                </tfoot>
                <tbody>
                    @{
                        foreach (var item in accounts)
                        {
                            <tr>
                                <td>
                                    <div style="width:8rem;">
                                        <img class="img-fluid" src="@item.ImagePath" alt="Imagen de la cuenta" />
                                    </div>
                                </td>
                                <td>@item.Type.Nombre</td>
                                <td>@item.Name</td>
                                <td>@item.Currency</td>
                                <td>
                                    @if (item.TypeId == 3)
                                    {
                                        <small class="text-info">S/. @string.Format("{0:N2}",item.CreditLimit)</small>
                                        <br />
                                    }
                                    <div class="@(item.Amount < 0 ? "text-danger"  : "text-success")">
                                        S/. @string.Format("{0:N2}",item.Amount)
                                    </div>
                                </td>
                                <td class="align-items-center">
                                    <a class="btn btn-outline-info" href="/transaction/transactions?cuentaId=@item.Id">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cash-coin" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M11 15a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm5-4a5 5 0 1 1-10 0 5 5 0 0 1 10 0z" />
                                            <path d="M9.438 11.944c.047.596.518 1.06 1.363 1.116v.44h.375v-.443c.875-.061 1.386-.529 1.386-1.207 0-.618-.39-.936-1.09-1.1l-.296-.07v-1.2c.376.043.614.248.671.532h.658c-.047-.575-.54-1.024-1.329-1.073V8.5h-.375v.45c-.747.073-1.255.522-1.255 1.158 0 .562.378.92 1.007 1.066l.248.061v1.272c-.384-.058-.639-.27-.696-.563h-.668zm1.36-1.354c-.369-.085-.569-.26-.569-.522 0-.294.216-.514.572-.578v1.1h-.003zm.432.746c.449.104.655.272.655.569 0 .339-.257.571-.709.614v-1.195l.054.012z" />
                                            <path d="M1 0a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h4.083c.058-.344.145-.678.258-1H3a2 2 0 0 0-2-2V3a2 2 0 0 0 2-2h10a2 2 0 0 0 2 2v3.528c.38.34.717.728 1 1.154V1a1 1 0 0 0-1-1H1z" />
                                            <path d="M9.998 5.083 10 5a2 2 0 1 0-3.132 1.65 5.982 5.982 0 0 1 3.13-1.567z" />
                                        </svg>
                                    </a>
                                    <a class="btn btn-outline-success" href="/account/edit?id=@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    <button class="btn btn-outline-danger" onclick="deleteAccount(@item.Id)"><i class="far fa-trash-alt"></i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    const image = document.getElementById("imgImage");
    const input = document.getElementById("inputImage");

    input.addEventListener("change", () => {
        image.src = URL.createObjectURL(input.files[0]);
    });
</script>
